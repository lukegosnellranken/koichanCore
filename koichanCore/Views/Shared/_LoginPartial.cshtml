@using Microsoft.AspNetCore.Identity
@using koichanCore.Areas.Identity.Data

@inject SignInManager<koichanCoreUser> SignInManager
@inject UserManager<koichanCoreUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul id="isSignedInList">
        <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link">logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <p id="logRegLinks"><a class="pageLink" href="/identity/account/login">login</a> / <a class="pageLink" href="/identity/account/register">register</a></p>
}
